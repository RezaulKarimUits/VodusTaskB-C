@using VodusTaskB.Models
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-2">
        <select id="dataSourceSelector" class="form-control-sm">
            <option value="1">Load from Database</option>
            <option value="2">Load from JSON</option>
        </select>
    </div>
    <div class="col-md-2">
        <input type="text" id="searchInput" class="form-control-sm" placeholder="Search by Name">
    </div>
    <div class="col-md-4">
        <input type="date" id="startTimestamp"  class="date-picker" placeholder="fromDate">

        <input type="date" id="endTimestamp" class="date-picker" placeholder="toDate">
    </div>
</div>

<div class="text-center">
    <h1>Orders</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Date</th>
                <th>Price</th>
                <th>Discounted Price</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td> <img src="@order.Image" alt="Order Image" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@order.OrderDate.ToString("dd-MMM-yy")</td>
                    <td>@order.Price</td>
                    <td>@order.DiscountedPrice</td>
                    <!-- Add more columns as needed -->
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/Order.js"></script>
}